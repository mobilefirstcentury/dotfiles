# scratchpad toggle
# SCRATCHPAD CREATE
bindsym $MOD+SHIFT+plus move scratchpad
# SCRATCHPAD SHOW
bindsym $MOD+plus scratchpad show



# On maintient un SCRATCHPAD pour pouvoir prendre des notes rapidement 

for_window [instance="SCRATCHPAD"] floating enable;
for_window [instance="SCRATCHPAD"] move scratchpad; [instance="SCRATCHPAD"] scratchpad show; move position 0px 22px; resize shrink height 0px; resize grow width 800px; move scratchpad
bindsym $MOD+n [instance="SCRATCHPAD"] scratchpad show


